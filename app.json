{
  "environments": {
    "review": {
      "addons": ["heroku-postgresql:hobby-dev", "heroku-redis:hobby-dev"],
      "formation": {
        "web": {
          "quantity": 1,
          "size": "free"
        },
        "worker": {
          "quantity": 1,
          "size": "free"
        }
      },
      "env": {
        "HEROKU_PARENT_APP_NAME": "pl-review-apps",
        "APPLICATION_HOST": "${HEROKU_APP_NAME}-pr-${HEROKU_PR_NUMBER}.herokuapp.com"
      },
      "buildpacks": [
        { "url": "https://github.com/heroku/heroku-buildpack-multi.git" }
      ],
      "scripts": {
        "postdeploy": "echo $APPLICATION_HOST; bin/rails db:fake_data:load"
      }
    }
  }
}
