{
  "environments": {
    "review": {
      "addons": ["heroku-postgresql:hobby-dev", "heroku-redis:hobby-dev"],
      "formation": {
        "web": {
          "quantity": 1,
          "size": "free"
        },
        "worker": {
          "quantity": 1,
          "size": "free"
        }
      },
      "env": {
        "HEROKU_PARENT_APP_NAME": "pl-review-apps"
      },
      "buildpacks": [
        { "url": "https://github.com/heroku/heroku-buildpack-multi.git" }
      ]
    }
  }
}
